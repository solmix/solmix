<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.solmix.modules</groupId>
    <artifactId>sgt</artifactId>
    <version>0.4-SNAPSHOT</version>
  </parent>
  <groupId>org.solmix.modules.sgt</groupId>
  <artifactId>sgt-extensions-server</artifactId>
  <dependencies>
		<dependency>
			<groupId>org.solmix.framework</groupId>
			<artifactId>org.solmix.framework.datasource</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.atmosphere</groupId>
			<artifactId>atmosphere-runtime</artifactId>
			<version>2.0.2</version>
		</dependency>
		<dependency>
			<groupId>org.solmix.modules</groupId>
			<artifactId>org.solmix.modules.spring</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.solmix.modules.sgt</groupId>
			<artifactId>sgt-extensions-shared</artifactId>
			<version>${project.version}</version>
		</dependency>
  </dependencies>
  <build>
  <plugins>
  <plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Category>solmix</Bundle-Category>
						<Export-Package>${solmix.osgi.export.pkg}</Export-Package>
						<Import-Package>${solmix.osgi.import.pkg}</Import-Package>
						<DynamicImport-Package>${solmix.osgi.dynamic.import}</DynamicImport-Package>
						 <_failok>false</_failok> 
						
						<_removeheaders>Ignore-Package,Include-Resource,Private-Package</_removeheaders>
						
						<!--
							<Bundle-Activator>org.saio.solmix.daoservice.Activator</Bundle-Activator>
						-->
					</instructions>
					<!--<unpackBundle>false</unpackBundle>-->
				</configuration>
			</plugin>
  </plugins>
  </build>
  <properties>
		<solmix.osgi.export.pkg>
		com.smartgwt.extensions.fusionchart.server,
		com.smartgwt.extensions.fusionchart.shared,
		org.solmix.sgt.server,
		org.solmix.atmosphere.shared,
		org.solmix.atmosphere.server*
		</solmix.osgi.export.pkg>
		<solmix.osgi.import.pkg>
		javax.servlet;version="[2.5,4)",
		javax.servlet.http;version="[2.5,4)",*
		</solmix.osgi.import.pkg>
		<solmix.osgi.dynamic.import>*</solmix.osgi.dynamic.import>
	</properties>
	<packaging>bundle</packaging>
</project>