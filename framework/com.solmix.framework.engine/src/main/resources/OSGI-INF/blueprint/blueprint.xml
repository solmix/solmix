<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">
	
	<!--______________________________________________________ -->
	<!--        Main servlet                                                     -->
	<!--______________________________________________________ -->
	<bean id="main" class="com.solmix.fmk.engine.MainServlet"	init-method="activate" destroy-method="deactivate">
		<property name="managedContext"  ref="blueprintBundleContext" />
		<property name="httpService">
			<reference interface="org.osgi.service.http.HttpService"
				availability="mandatory" timeout="3000" />
		</property>
	 	<property name="servletManager">
			<reference interface="com.solmix.api.servlets.ServletManager" timeout="3000" availability="optional"/>
		</property> 
		<property name="filterManager">
			<reference interface="com.solmix.api.servlets.FilterManager" timeout="3000" availability="optional"/>
		</property> 
		<property name="paramaterEncoding" value="${default.parameter.encoding}"></property>
	</bean>
	<!--______________________________________________________ -->
	<!--        Properties holder                                             -->
	<!--______________________________________________________ -->
	<cm:property-placeholder persistent-id="com.solmix.framework.engine">
		<cm:default-properties>
			<cm:property name="default.parameter.encoding" value="UTF-8"></cm:property>
		</cm:default-properties>
	</cm:property-placeholder>

</blueprint>
