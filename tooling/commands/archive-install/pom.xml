<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.solmix.commands</groupId>
    <artifactId>commands</artifactId>
    <version>0.6.1-SNAPSHOT</version>
  </parent>
  <artifactId>solmix-commands-archive-install</artifactId>
  <name>Solmix :: Command :: Install Karaf Archive</name>
  <dependencies>
  	<dependency>
  		<groupId>org.apache.karaf.shell</groupId>
  		<artifactId>org.apache.karaf.shell.console</artifactId>
  		<version>${apache.karaf.version}</version>
  	</dependency>
  	<dependency>
  		<groupId>org.osgi</groupId>
  		<artifactId>org.osgi.core</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.osgi</groupId>
  		<artifactId>org.osgi.compendium</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.apache.felix</groupId>
  		<artifactId>org.apache.felix.bundlerepository</artifactId>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>org.apache.karaf.obr</groupId>
  		<artifactId>org.apache.karaf.obr.command</artifactId>
  		<version>${apache.karaf.version}</version>
  		<scope>provided</scope>
  	</dependency>
 <dependency>
    <groupId>org.ops4j.pax.url</groupId>
    <artifactId>pax-url-mvn</artifactId>
</dependency>
 <dependency>
 	<groupId>org.apache.karaf.features</groupId>
 	<artifactId>org.apache.karaf.features.core</artifactId>
 	<version>${apache.karaf.version}</version>
 </dependency>
 <dependency>
 	<groupId>org.solmix.common</groupId>
 	<artifactId>solmix-common-util</artifactId>
 </dependency>
  </dependencies>
  <packaging>bundle</packaging>
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Category>solmix</Bundle-Category>
						<Export-Package>${solmix.osgi.export.pkg}*</Export-Package>
						<Import-Package>${solmix.osgi.import.pkg}*</Import-Package>
						<!--<Import-Bundle>com.springsource.oracle.jdbc;version="10.2.0.2"</Import-Bundle>-->
						<!--<Private-Package>${solmix.osgi.export.pkg}.impl</Private-Package>-->
						<!--<_failok>${solmix.osgi.failok}</_failok>-->
						<!--
							<_removeheaders>Ignore-Package,Include-Resource,Private-Package</_removeheaders>
						-->
						<!--
							<Bundle-Activator>org.saio.solmix.daoservice.Activator</Bundle-Activator>
						-->
						<!--<DynamicImport-Package>*</DynamicImport-Package>-->
					</instructions>
					<!--<unpackBundle>false</unpackBundle>-->
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<solmix.osgi.export.pkg>org.solmix.command*</solmix.osgi.export.pkg>
		<solmix.osgi.import.pkg>
		org.apache.felix.service.command,
                            org.apache.felix.gogo.commands,
                            org.apache.karaf.shell.console,*</solmix.osgi.import.pkg>
	</properties>
</project>