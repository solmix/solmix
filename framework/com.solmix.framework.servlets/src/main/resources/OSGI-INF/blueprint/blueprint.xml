<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">
	
	<!--______________________________________________________ -->
	<!--       servletManager                                                 -->
	<!--______________________________________________________ -->
	<bean id="servletManager"	class="com.solmix.fmk.servlets.internel.ServletManagerImpl"
		init-method="init" destroy-method="destroy">
			<property name="bundleContext"  ref="blueprintBundleContext" />
		<property name="servletContext">
			<reference interface="javax.servlet.ServletContext"></reference>
		</property>
		<property name="servletPrifix" value="${servletPrifix}"></property>
	</bean>
	<!--______________________________________________________ -->
	<!--       filterManager                                                 -->
	<!--______________________________________________________ -->
	<bean id="filter_manager"	class="com.solmix.fmk.servlets.internel.FilterManagerImpl"
		init-method="init" destroy-method="destroy">
			<property name="bundleContext"  ref="blueprintBundleContext" />
		<property name="servletContext">
			<reference interface="javax.servlet.ServletContext"></reference>
		</property>
	</bean>
	<!--______________________________________________________ -->
	<!--       DataSourceLoaderImpl                            -->
	<!--______________________________________________________ -->
	<bean id="datasourceLoader" class="com.solmix.fmk.servlets.internel.DataSourceLoaderServlet">
		<property name="dsmService" ref="dsManager"/>
		</bean>
	<bean id="datasourceCall" class="com.solmix.fmk.servlets.internel.DataSourceCallServlet">
		<property name="rpcService" ref="prcManager"/>
	</bean>
	
	<service interface="com.solmix.api.servlets.ServletManager"		ref="servletManager">
	</service>
	<service interface="com.solmix.api.servlets.FilterManager"		ref="filter_manager">
	</service>
	<!-- <service interface="javax.servlet.Servlet" ref="datasourceLoader">
		<service-properties>
			<entry key="servlet.pattern" value="/DataSourceLoader"/>
			<entry key="servlet.name" value="dataSourceLoader"/>
		</service-properties>
	</service> -->
	<service interface="javax.servlet.Servlet" ref="datasourceCall">
		<service-properties>
			<entry key="servlet.pattern" value="/DataSourceCall"/>
			<entry key="servlet.name" value="ida"/>
		</service-properties>
	</service>
	
	
	<reference  id="dsManager"	interface="com.solmix.api.datasource.DataSourceManager"		availability="mandatory" >
	</reference>
	<reference id="prcManager"	interface="com.solmix.api.rpc.RPCManagerFactory"		availability="mandatory" >
	</reference>
	<!--______________________________________________________ -->
	<!--        Properties holder                                             -->
	<!--______________________________________________________ -->
	<cm:property-placeholder persistent-id="com.solmix.framework.servlets">
		<cm:default-properties>
			<cm:property name="servletPrifix" value="/_slx"></cm:property></cm:default-properties>
	</cm:property-placeholder>
	


</blueprint>
