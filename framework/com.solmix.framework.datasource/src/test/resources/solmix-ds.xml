<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">


	<bean id="helper" class="com.solmix.fmk.util.OSGIHelper">
		<property name="context" ref="blueprintBundleContext" />
	</bean>
	<bean id="dsManager" class="com.solmix.fmk.datasource.DataSourceManager"
		destroy-method="destroy" />
	<bean id="rpcManagerFactory" class="com.solmix.fmk.rpc.RPCManagerFactoryImpl"></bean>
	<bean id="util" class="com.solmix.fmk.util.ServiceUtil">
		<property name="context" ref="blueprintBundleContext" />
	</bean>

	<service ref="rpcManagerFactory" interface="com.solmix.api.rpc.RPCManagerFactory"></service>
	<service ref="dsManager"
		interface="com.solmix.api.datasource.DataSourceManagerService">
	</service>
	<reference id="ds-manager"
		interface="com.solmix.api.datasource.DataSourceManagerService"
		availability="optional">
		<reference-listener ref="helper" bind-method="register_dsm"
			unbind-method="unregister_dsm" />
	</reference>
	<reference id="ds-repo" interface="com.solmix.api.repo.DSRepoService">
		<reference-listener ref="helper" bind-method="register_dsr"
			unbind-method="unregister_dsr" />
	</reference>
	<reference-list id="dsProvider" interface="com.solmix.api.datasource.DataSource"
		availability="optional">
		<reference-listener ref="dsManager" bind-method="register"
			unbind-method="unregister" />
	</reference-list>
	<reference-list id="ds-cm" interface="com.solmix.fmk.config.ConfigRealm"
		availability="optional">
		<reference-listener ref="helper" bind-method="register_cm"
			unbind-method="unregister_cm" />
	</reference-list>
	<reference id="event-admin" interface="org.osgi.service.event.EventAdmin">
		<reference-listener ref="helper" bind-method="register_eventAdmin"
			unbind-method="unregister_eventAdmin" />
	</reference>
	<bean class="com.solmix.fmk.application.ApplicationManagerImpl" id="appManager"></bean>
	<reference-list id="application"
		interface="com.solmix.api.application.Application"
		availability="optional">
	</reference-list>
</blueprint>
