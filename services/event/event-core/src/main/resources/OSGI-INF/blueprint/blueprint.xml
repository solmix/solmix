<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">
	<!--______________________________________________________ -->
	<!--______Configuration Manager  Holder ____________ -->
	<!--______________________________________________________ -->
	<service interface="org.osgi.service.cm.ManagedService" ref="eventadmin">
		<service-properties>
			<entry key="service.pid"
				value="org.solmix.framework.pool">
			</entry>
		</service-properties>
	</service>
	<service interface="org.osgi.service.event.EventAdmin" ref="eventadmin"></service>
	<bean id="eventadmin" class="org.solmix.eventservice.EventAdminImpl" init-method="start"
		destroy-method="stop">
		<property name="bundleContext" ref="blueprintBundleContext"></property>
	</bean>
</blueprint>
