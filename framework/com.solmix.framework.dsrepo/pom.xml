<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>framework</artifactId>
    <groupId>com.solmix</groupId>
    <version>0.2.1-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>
   <groupId>com.solmix.framework</groupId>
  <artifactId>com.solmix.framework.dsrepo</artifactId>
  <name>Solmix :: FrameWork :: DataSource Repository</name>
   <dependencies>
  	<dependency>
  		<groupId>org.slf4j</groupId>
  		<artifactId>slf4j-simple</artifactId>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.util</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.api</artifactId>
  	</dependency>
   </dependencies>
  <packaging>bundle</packaging>
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Category>solmix</Bundle-Category>
						<Export-Package>${solmix.osgi.export.pkg}*</Export-Package>
						<Import-Package>${solmix.osgi.import.pkg}*</Import-Package>
						<!--<Import-Bundle>com.springsource.oracle.jdbc;version="10.2.0.2"</Import-Bundle>-->
						<!--<Private-Package>${solmix.osgi.export.pkg}.impl</Private-Package>-->
						<!--<_failok>${solmix.osgi.failok}</_failok>-->
						<!--
							<_removeheaders>Ignore-Package,Include-Resource,Private-Package</_removeheaders>
						-->
						<!--
							<Bundle-Activator>org.saio.solmix.daoservice.Activator</Bundle-Activator>
						-->
						<!--<DynamicImport-Package>*</DynamicImport-Package>-->
					</instructions>
					<!--<unpackBundle>false</unpackBundle>-->
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<solmix.osgi.export.pkg>com.solmix.fmk.repo</solmix.osgi.export.pkg>
		<solmix.osgi.import.pkg>
		!com.solmix.fmk.repo*,
		com.solmix.commons*,*</solmix.osgi.import.pkg>
	</properties>
</project>