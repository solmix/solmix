<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>framework</artifactId>
    <groupId>com.solmix</groupId>
    <version>0.2.1-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>
  <groupId>com.solmix.framework</groupId>
  <artifactId>com.solmix.framework.datasource</artifactId>
  <name>Solmix :: FrameWork :: DataSource</name>
  <dependencies>
  	<dependency>
  		<groupId>org.apache.poi</groupId>
  		<artifactId>poi</artifactId>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>commons-jxpath</groupId>
  		<artifactId>commons-jxpath</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>commons-dbcp</groupId>
  		<artifactId>commons-dbcp</artifactId>
  	</dependency>
  	<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.shiro</groupId>
			<artifactId>shiro-web</artifactId>
		</dependency>
  	<!-- <dependency>
    <groupId>org.javassist</groupId>
    <artifactId>javassist</artifactId>
    <version>3.16.1-GA</version>
</dependency> -->
  	<dependency>
  		<groupId>org.osgi</groupId>
  		<artifactId>org.osgi.compendium</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.apache.servicemix.bundles</groupId>
  		<artifactId>
  			org.apache.servicemix.bundles.javassist
  		</artifactId>
  		<version>3.12.1.GA_2</version>
  	</dependency>
  	<dependency>
  		<groupId>commons-io</groupId>
  		<artifactId>commons-io</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.util</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.api</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.dsrepo</artifactId>
  	</dependency>
  </dependencies>
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-Category>solmix</Bundle-Category>
						<Export-Package>${solmix.osgi.export.pkg}</Export-Package>
						<Import-Package>${solmix.osgi.import.pkg}</Import-Package>
						<DynamicImport-Package>${solmix.osgi.dynamic.import}</DynamicImport-Package>
						<Private-Package>com.solmix.fmk.internel</Private-Package>
						 <_failok>false</_failok> 

						<_removeheaders>Ignore-Package,Include-Resource,Private-Package</_removeheaders>

						<!--
							<Bundle-Activator>org.saio.solmix.daoservice.Activator</Bundle-Activator>
						-->
					</instructions>
					<!--<unpackBundle>false</unpackBundle>-->
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<solmix.osgi.export.pkg>!com.solmix.fmk.internel,com.solmix.fmk*</solmix.osgi.export.pkg>
		<solmix.osgi.import.pkg>
		javax.servlet;version="[2.5,4)",
		javax.servlet.http;version="[2.5,4)",
		org.apache.poi*;resolution:=optional,
		org.apache.commons.fileupload;resolution:=optional,
		org.apache.shiro*;resolution:=optional,
		com.solmix.commons*,*
		</solmix.osgi.import.pkg>
		<solmix.osgi.dynamic.import>*</solmix.osgi.dynamic.import>
	</properties>
	<packaging>bundle</packaging>
</project>