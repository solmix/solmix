<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<context:property-placeholder location="classpath:config/com.solmix.framework.dsrepo.properties"	system-properties-mode="OVERRIDE" /><bean
		id="config_manager" class="com.solmix.fmk.spring.cm.SpringManagedService">
	<property name="locations">
		<list>
			<value>classpath:config/com.solmix.framework.dsrepo.properties</value>
			<value>classpath:config/com.solmix.modules.sql.properties</value>
			<value>classpath:config/com.solmix.framework.datasource.properties</value>
			</list>
	</property>
	<property name="managers">
		<list>
			<bean id="sql_manager" class="com.solmix.sql.internal.SQLConfigManager"></bean>
			<bean id="ds_manager" class="com.solmix.fmk.internel.DSConfigManager"></bean>
		</list>
	</property>
</bean>

</beans>