<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
 xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0">

	
    <type-converters>
        <bean class="org.solmix.commons.osgi.cm.PropertiesConverter"/>
    </type-converters>

    <!-- Allow usage of System properties, especially the karaf.base property -->
    <ext:property-placeholder placeholder-prefix="$[" placeholder-suffix="]"/>

    <!-- AdminConfig property place holder for the org.apache.karaf.jaas  -->
    <cm:property-placeholder persistent-id="org.solmix.modules.sql" >
        <cm:default-properties>
            <!-- mode defined -->
           
             <!--=========SQL configuration  ===========-->
            <cm:property name="sql.defaultDatabase" value="HSQLDB"/>
            <cm:property name="sql.jndi.autoDetect" value="true"/>
            <cm:property name="sql.jndi.autoDetectSpace" value="jdbc/"/>
            <cm:property name="sql.defaultDateFormat" value="YYYY-MM-DD"/>
            <cm:property name="sql.defaultDateTimeFormat" value="YYYY-MM-DD HH24:MI:SS"/>
            <cm:property name="sql.pool.enabled" value="true"/>
            <cm:property name="sql.pool.timeBetweenEvictionRunsMillis" value="-1"/>
            <cm:property name="sql.pool.minEvictableIdleTimeMillis" value="30000"/>
            <cm:property name="sql.pool.numTestsPerEvictionRun" value="-1"/>
            <cm:property name="sql.pool.testOnBorrow" value="true"/>
            <cm:property name="sql.pool.testWhileIdle" value="false"/>
            <cm:property name="sql.forceConnectionClosedPeriod" value="30000"/>
            <cm:property name="sql.HSQLDB.database.type" value="hsqldb"/>
            <cm:property name="sql.HSQLDB.interface.type" value="jndiosgi"/>
            <cm:property name="sql.HSQLDB.used.pool" value="true"/>
            <cm:property name="sql.HSQLDB.autoJoinTransactions" value="true"/>
            <cm:property name="sql.HSQLDB.jndiosgi" value="(osgi.jndi.service.name=jdbc/NoTxHsqlDataSource)"/>
            <cm:property name="sql.ORACLE.database.type" value="oracle"/>
            <cm:property name="sql.ORACLE.interface.type" value="jndiosgi"/>
            <cm:property name="sql.ORACLE.used.pool" value="true"/>
            <cm:property name="sql.ORACLE.autoJoinTransactions" value="true"/>
            <cm:property name="sql.ORACLE.jndiosgi" value="(osgi.jndi.service.name=jdbc/NoTxOracleDataSource)"/>
        </cm:default-properties>
    </cm:property-placeholder>
    <bean>
    	<property name="NCName">
    		<map>
    			<entry key=""></entry></map></property></bean>

</blueprint>
