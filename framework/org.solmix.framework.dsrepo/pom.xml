<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>framework</artifactId>
    <groupId>org.solmix</groupId>
    <version>0.4-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>
   <groupId>org.solmix.framework</groupId>
  <artifactId>org.solmix.framework.dsrepo</artifactId>
  <name>Solmix :: FrameWork :: DataSource Repository</name>
   <dependencies>
  	<dependency>
  		<groupId>org.solmix.framework</groupId>
  		<artifactId>org.solmix.framework.util</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.solmix.framework</groupId>
  		<artifactId>org.solmix.framework.api</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.javassist</groupId>
  		<artifactId>javassist</artifactId>
  		<version>3.18.1-GA</version>
  	</dependency>
  	<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-beans</artifactId>
			<optional>true</optional>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<optional>true</optional>
		</dependency>
   </dependencies>
  <packaging>bundle</packaging>
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Category>solmix</Bundle-Category>
						<Export-Package>${solmix.osgi.export.pkg}*</Export-Package>
						<Import-Package>${solmix.osgi.import.pkg}*</Import-Package>
						<!--<Import-Bundle>com.springsource.oracle.jdbc;version="10.2.0.2"</Import-Bundle>-->
						<!--<Private-Package>${solmix.osgi.export.pkg}.impl</Private-Package>-->
						<!--<_failok>${solmix.osgi.failok}</_failok>-->
						<!--
							<_removeheaders>Ignore-Package,Include-Resource,Private-Package</_removeheaders>
						-->
						<!--
							<Bundle-Activator>org.saio.solmix.daoservice.Activator</Bundle-Activator>
						-->
						<!--<DynamicImport-Package>*</DynamicImport-Package>-->
					</instructions>
					<!--<unpackBundle>false</unpackBundle>-->
				</configuration>
			</plugin>
		</plugins>
	</build>
	<properties>
		<solmix.osgi.export.pkg>org.solmix.fmk.repo</solmix.osgi.export.pkg>
		<solmix.osgi.import.pkg>
		org.springframework*;resolution:=optional;version="${spring.version}",
		org.solmix.commons*,*</solmix.osgi.import.pkg>
	</properties>
</project>