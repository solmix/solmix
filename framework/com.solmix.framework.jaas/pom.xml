<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.solmix</groupId>
    <artifactId>framework</artifactId>
    <version>0.2.1-SNAPSHOT</version>
  </parent>
  <groupId>com.solmix.framework.jaas</groupId>
  <artifactId>com.solmix.framework.jaas</artifactId>
  <name>Solmix :: FrameWork :: JAAS</name>
   <dependencies>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.api</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.util</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>commons-pool</groupId>
  		<artifactId>commons-pool</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.apache.felix</groupId>
  		<artifactId>org.apache.felix.framework</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.osgi</groupId>
  		<artifactId>org.osgi.compendium</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.apache.karaf.jaas</groupId>
  		<artifactId>org.apache.karaf.jaas.modules</artifactId>
  		<version>2.3.0</version>
  	</dependency>
  	<dependency>
  		<groupId>com.solmix.framework</groupId>
  		<artifactId>com.solmix.framework.datasource</artifactId>
  	</dependency>
   </dependencies>
  <packaging>bundle</packaging>
  <properties>
		<solmix.osgi.export.pkg>!com.solmix.fmk.pool.internel,com.solmix.fmk.jaas*</solmix.osgi.export.pkg>
		<solmix.osgi.import.pkg>
		javax.servlet;version="[2.5,4)",
		javax.servlet.http;version="[2.5,4)",
		com.solmix.commons*,*
		</solmix.osgi.import.pkg>
		<solmix.osgi.dynamic.import>*</solmix.osgi.dynamic.import>
	</properties>
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Category>solmix</Bundle-Category>
						<Export-Package>${solmix.osgi.export.pkg}*</Export-Package>
						<Import-Package>${solmix.osgi.import.pkg}*</Import-Package>
						<!-- <Import-Bundle>com.springsource.oracle.jdbc;version="10.2.0.2"</Import-Bundle> -->
						<Private-Package>com.solmix.fmk.pool.internel</Private-Package>
						<!--<_failok>${solmix.osgi.failok}</_failok> -->
						<!-- <_removeheaders>Ignore-Package,Include-Resource,Private-Package</_removeheaders> -->
						<Bundle-Activator>com.solmix.fmk.pool.internel.PoolActivator</Bundle-Activator>
						<DynamicImport-Package>*</DynamicImport-Package>
					</instructions>
					<!--<unpackBundle>false</unpackBundle> -->
				</configuration>
			</plugin>
			</plugins>
			</build>
</project>